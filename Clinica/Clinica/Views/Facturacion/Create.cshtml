@model Clinica.Models.Facturacion

@{
    ViewData["Title"] = "Crear Facturación";
}

<div class="container mt-5">
    <h1 class="text-center">Crear Facturación</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="CitaId" class="control-label"></label>
                    <select asp-for="CitaId" class="form-control" asp-items="ViewBag.CitaId"></select>
                    <span asp-validation-for="CitaId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Monto" class="control-label"></label>
                    <input asp-for="Monto" class="form-control" />
                    <span asp-validation-for="Monto" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EstadoPago" class="control-label"></label>
                    <input asp-for="EstadoPago" class="form-control" />
                    <span asp-validation-for="EstadoPago" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

