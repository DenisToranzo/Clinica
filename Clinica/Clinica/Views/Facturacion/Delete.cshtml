@model Clinica.Models.Facturacion

@{
    ViewData["Title"] = "Eliminar Facturación";
}

<div class="container mt-5">
    <h1 class="text-center">Eliminar Facturación</h1>

    <h3 class="text-danger">¿Estás seguro de que deseas eliminar esto?</h3>
    <div>
        <h4>Detalles de Facturación</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Monto)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Monto)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaFacturacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaFacturacion)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.EstadoPago)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.EstadoPago)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Cita)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Cita.Id)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            </div>
        </form>
    </div>
</div>
