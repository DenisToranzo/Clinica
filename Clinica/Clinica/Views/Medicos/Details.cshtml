@model Clinica.Models.Medico

@{
    ViewData["Title"] = "Detalles del Médico";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Detalles del Médico</h1>

    <div class="border p-4 rounded shadow-sm bg-light">
        <hr />
        <dl class="row">
            <dt class="col-sm-2 fw-bold">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2 fw-bold">
                @Html.DisplayNameFor(model => model.Apellido)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
            </dd>
            <dt class="col-sm-2 fw-bold">
                @Html.DisplayNameFor(model => model.Telefono)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
            </dd>
            <dt class="col-sm-2 fw-bold">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2 fw-bold">
                @Html.DisplayNameFor(model => model.Especialidad)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Especialidad)
            </dd>
            <dt class="col-sm-2 fw-bold">
                @Html.DisplayNameFor(model => model.FechaContratacion)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaContratacion)
            </dd>
        </dl>
    </div>

    <div class="d-flex justify-content-between mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>
