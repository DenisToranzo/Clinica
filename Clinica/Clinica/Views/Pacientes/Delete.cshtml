@model Clinica.Models.Paciente

@{
    ViewData["Title"] = "Eliminar Paciente";
}

<div class="container mt-5">
    <h1 class="text-center text-danger mb-4">Eliminar Paciente</h1>
    <h3 class="text-center">¿Estás seguro de que deseas eliminar este paciente?</h3>

    <div class="border p-4 rounded shadow-sm bg-light mt-4">
        <dl class="row">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Apellido)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaRegistro)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Genero)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Genero)</dd>
        </dl>

        <form asp-action="Delete" class="d-flex justify-content-between mt-4">
            <input type="hidden" asp-for="Id" />
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
    </div>
</div>
