@model Clinica.Models.Paciente

@{
    ViewData["Title"] = "Detalles del Paciente";
}

<div class="container mt-5">
    <h1 class="text-center text-primary mb-4">Detalles del Paciente</h1>

    <div class="border p-4 rounded shadow-sm bg-light">
        <dl class="row">
            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Apellido)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Telefono)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Email)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Direccion)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaNacimiento)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimiento)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.FechaRegistro)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaRegistro)</dd>

            <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Genero)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Genero)</dd>
        </dl>

        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
            <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
        </div>
    </div>
</div>
