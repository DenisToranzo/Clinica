@model Clinica.Models.Tratamiento

@{
    ViewData["Title"] = "Detalles del Tratamiento";
}

<div class="container mt-5">
    <h1 class="text-center">Detalles del Tratamiento</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="text-primary">Tratamiento</h4>
            <hr />
            <dl class="row mb-4">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.Cita)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.Cita.Id)
                </dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Editar</a>
        <a asp-action="Index" class="btn btn-secondary">Volver al Listado</a>
    </div>
</div>
